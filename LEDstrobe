#include<FastLED.h>
#define NUM_LEDS 135
#define DATA_PIN 11

CRGB leds[NUM_LEDS];

void setup(){   
  FastLED.addLeds<WS2812B,DATA_PIN,GRB>(leds,NUM_LEDS);
}
void loop(){ 

for(int i=0;i<NUM_LEDS;i++){
    leds[i]=CRGB::Blue;
    FastLED.show();
    delay(300); 
   
   leds[i]=CRGB::White;
    leds[(NUM_LEDS-i)]=CRGB::White;
    } 
  
  for(int i=0;i<NUM_LEDS;i++){
    leds[i]=CRGB::Purple;
    FastLED.show();
    delay(300);
    leds[i]=CRGB::Blue;
    
    leds[(NUM_LEDS-i)]=CRGB::Blue;
    }
  }
